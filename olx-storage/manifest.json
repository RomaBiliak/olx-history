{
    "manifest_version": 2,
    "name": "OLX storage",
    "version": "2.0.0",
    "description":"OLX storage - це безкоштовне розширення, що дозволяє Вам відстежувати зміни в обраних товарах.",   
    "icons": {
            "16": "images/db_16.png",
            "32": "images/db_32.png",
            "48": "images/db_48.png",
            "64": "images/db_64.png",
            "128": "images/db_128.png"
    },
 
    "content_scripts": [
        {
            "matches": [ "https://www.olx.ua/*"],
            "js": [ "content_scripts/olx.js"],
            "run_at": "document_end"
        }
    ],
	"permissions": ["https://www.olx.ua/*"],
    "browser_action": {
          "default_icon": {
            "16": "images/db_16.png",
            "32": "images/db_32.png",
            "48": "images/db_48.png",
            "64": "images/db_64.png",
            "128": "images/db_128.png"
          },
          "default_title": "OLX storage",
          "default_popup": "popup/popup.html"
    }
}
